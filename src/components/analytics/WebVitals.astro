---
// src/components/analytics/WebVitals.astro
// Client-side Web Vitals tracking component
---

<script>
  import { initWebVitals, sendToAnalytics, logMetric } from '@/lib/utils/web-vitals';
  
  // Initialize tracking when the page loads
  if (typeof window !== 'undefined') {
    initWebVitals((metric) => {
      // Log in development
      if (import.meta.env.DEV) {
        logMetric(metric);
      }
      
      // Send to analytics in production
      if (import.meta.env.PROD) {
        sendToAnalytics(metric);
      }
    });
  }
</script>

