---
// src/components/landing/LandingFooter.astro
// Footer for landing page following Vercel/GitHub style
import SocialIcons from '@components/ui/SocialIcons.astro';

const footerLinks = {
  Product: [
    { label: 'Documentation', href: '/getting-started/' },
    { label: 'API Reference', href: '/api/' },
    { label: 'Models', href: '/api/models/' },
  ],
  Resources: [
    { label: 'Blog', href: '/blog/' },
    { label: 'GitHub', href: 'https://github.com/weyl-ai' },
    { label: 'Examples', href: 'https://github.com/weyl-ai/examples' },
    { label: 'Status', href: 'https://status.weyl.ai' },
  ],
};
---

<footer class="border-t border-border bg-bg-surface">
  <div class="max-w-7xl mx-auto px-6 py-16">
    <!-- Main footer grid -->
    <div class="grid grid-cols-2 md:grid-cols-6 gap-8 mb-12">
      <!-- Logo and tagline -->
      <div class="col-span-2">
        <a href="/" class="inline-block mb-4">
          <img src="/weyl-logo.svg" alt="WEYL" class="h-8 w-auto" loading="lazy" />
        </a>
        <p class="font-mono text-small text-text-muted max-w-xs mb-6">
          The render layer for generative media
        </p>
        
        <!-- Social links using shared component -->
        <SocialIcons size="md" />
      </div>
      
      <!-- Footer link columns -->
      {Object.entries(footerLinks).map(([category, links]) => (
        <div>
          <h4 class="font-mono text-micro font-semibold text-text-muted uppercase tracking-wider mb-4">
            {category}
          </h4>
          <ul class="space-y-3">
            {links.map((link) => (
              <li>
                <a 
                  href={link.href}
                  class="font-mono text-small text-text-secondary hover:text-brand-primary transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <!-- Bottom bar -->
    <div class="border-t border-border pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="font-mono text-small text-text-muted">
          © {new Date().getFullYear()} Weyl AI Labs // All rights reserved
        </p>
        
        <div class="font-mono text-small text-text-muted flex items-center gap-2">
          <span class="text-success">█</span>
          <span>All systems operational</span>
        </div>
      </div>
    </div>
  </div>
</footer>

