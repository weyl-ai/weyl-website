---
// src/components/ui/MetricDisplay.astro
interface Props {
  value: string | number;
  unit?: string | undefined;
  label: string;
  trend?: 'up' | 'down' | 'neutral' | undefined;
  class?: string | undefined;
}

const { value, unit, label, trend, class: className = '' } = Astro.props;
---

<div class:list={[
  'flex flex-col items-center p-6 bg-bg-surface border border-border rounded-md',
  className
]}>
  <div class="flex items-baseline gap-1">
    <span class="font-mono text-headline font-bold text-brand-primary tabular-nums">
      {value}
    </span>
    {unit && (
      <span class="font-mono text-small text-text-muted">
        {unit}
      </span>
    )}
  </div>
  <span class="font-mono text-caption text-text-subtle uppercase tracking-wider mt-2">
    {label}
  </span>
  {trend && (
    <span class:list={[
      'text-caption mt-1',
      trend === 'up' && 'text-semantic-success',
      trend === 'down' && 'text-semantic-error',
      trend === 'neutral' && 'text-text-muted',
    ]}>
      {trend === 'up' && '↑'}
      {trend === 'down' && '↓'}
      {trend === 'neutral' && '→'}
    </span>
  )}
</div>

