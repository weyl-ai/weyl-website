---
// src/components/navigation/TableOfContents.astro
// Floating table of contents with jump links

import type { TocItem } from '@/lib/utils/generate-toc';

interface Props {
  headings: TocItem[];
  title?: string;
}

const { headings, title = 'On this page' } = Astro.props;

if (headings.length === 0) {
  return null;
}
---

<nav aria-label="Table of Contents" class="toc">
  <h2 class="toc-title">{title}</h2>
  <ul class="toc-list">
    {headings.map((heading) => (
      <li class={`toc-item depth-${heading.depth}`}>
        <a href={`#${heading.slug}`}>{heading.text}</a>
      </li>
    ))}
  </ul>
</nav>

<style>
  .toc {
    position: sticky;
    top: 2rem;
    max-height: calc(100vh - 4rem);
    overflow-y: auto;
    padding: 1.5rem;
    background: var(--sl-color-bg-sidebar);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 8px;
    font-size: 0.875rem;
  }
  
  .toc-title {
    font-size: 1rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--sl-color-text);
  }
  
  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .toc-item {
    margin-bottom: 0.5rem;
  }
  
  .toc-item a {
    display: block;
    color: var(--sl-color-text-accent);
    text-decoration: none;
    transition: color 0.2s;
    line-height: 1.4;
  }
  
  .toc-item a:hover {
    color: var(--sl-color-text);
    text-decoration: underline;
  }
  
  .toc-item.depth-1 {
    padding-left: 0;
  }
  
  .toc-item.depth-2 {
    padding-left: 1rem;
  }
  
  .toc-item.depth-3 {
    padding-left: 2rem;
  }
  
  /* Active link highlighting */
  .toc-item a.active {
    color: var(--sl-color-text);
    font-weight: 600;
  }
  
  /* Mobile adjustments */
  @media (max-width: 768px) {
    .toc {
      position: relative;
      top: 0;
      max-height: none;
      margin-bottom: 2rem;
    }
  }
</style>

<script>
  // Highlight active section in TOC
  function updateActiveTocLink() {
    const headings = document.querySelectorAll('h2[id], h3[id]');
    const tocLinks = document.querySelectorAll('.toc-item a');
    
    // Find the currently visible heading
    let activeId = '';
    const scrollPosition = window.scrollY + 100;
    
    headings.forEach((heading) => {
      const rect = heading.getBoundingClientRect();
      if (rect.top + window.scrollY <= scrollPosition) {
        activeId = heading.id;
      }
    });
    
    // Update active class
    tocLinks.forEach((link) => {
      const href = link.getAttribute('href');
      if (href === `#${activeId}`) {
        link.classList.add('active');
      } else {
        link.classList.remove('active');
      }
    });
  }
  
  // Update on scroll with throttling
  let ticking = false;
  window.addEventListener('scroll', () => {
    if (!ticking) {
      window.requestAnimationFrame(() => {
        updateActiveTocLink();
        ticking = false;
      });
      ticking = true;
    }
  });
  
  // Update on load
  updateActiveTocLink();
</script>

