---
// src/components/brand/LogoLockup.astro
import Monotile from './Monotile.astro';
import Wordmark from './Wordmark.astro';

interface Props {
  size?: 'small' | 'medium' | 'large';
  variant?: 'stroke' | 'filled' | 'solid';
  glow?: boolean;
  class?: string;
}

const { 
  size = 'medium',
  variant = 'stroke',
  glow = false,
  class: className = '' 
} = Astro.props;

const logoSizes = {
  small: 'small' as const,
  medium: 'medium' as const,
  large: 'large' as const,
};

const textSizes = {
  small: 'text-body',
  medium: 'text-subhead',
  large: 'text-headline',
};
---

<div class:list={['inline-flex items-center gap-3', className]}>
  <Monotile size={logoSizes[size]} variant={variant} glow={glow} />
  <Wordmark class={textSizes[size]} />
</div>

