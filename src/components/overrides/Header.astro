---
// src/components/overrides/Header.astro
import LogoLockup from '@components/brand/LogoLockup.astro';

const navItems = [
  { label: 'docs', href: '/getting-started/' },
  { label: 'api', href: '/api/' },
  { label: 'blog', href: '/blog/' },
];
---

<header class="sticky top-0 z-50 w-full border-b border-border bg-bg-primary">
  <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
    <a href="/" class="flex items-center gap-3 hover:opacity-80 transition-opacity">
      <LogoLockup size="small" variant="stroke" glow />
    </a>
    
    <nav class="font-mono text-small">
      <ul class="flex items-center gap-1">
        {navItems.map((item, index) => (
          <>
            {index > 0 && <li class="text-text-subtle px-2">//</li>}
            <li>
              <a 
                href={item.href}
                class="text-text-secondary hover:text-brand-primary transition-colors px-3 py-2"
              >
                {item.label}
              </a>
            </li>
          </>
        ))}
      </ul>
    </nav>
  </div>
</header>

