---
// src/components/overrides/Footer.astro
import SocialIcons from '@components/ui/SocialIcons.astro';

const footerLinks = {
  Product: [
    { label: 'Documentation', href: '/getting-started/' },
    { label: 'Quick Start', href: '/getting-started/quick-start/' },
    { label: 'API Reference', href: '/api/' },
    { label: 'Models', href: '/api/models/' },
  ],
  Developers: [
    { label: 'AI Workflows', href: '/workflows/' },
    { label: 'Authentication', href: '/api/authentication/' },
    { label: 'WebSocket API', href: '/api/websocket/' },
    { label: 'Error Reference', href: '/api/reference/errors/' },
  ],
  Resources: [
    { label: 'Blog', href: '/blog/' },
    { label: 'Posters', href: '/posters/' },
    { label: 'Brand Kit', href: '/brand/' },
    { label: 'GitHub', href: 'https://github.com/weyl-ai' },
  ],
};
---

<footer class="border-t border-border bg-bg-primary">
  <div class="max-w-7xl mx-auto px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
      <div>
        <h3 class="font-mono text-small font-semibold text-brand-primary mb-4">
          WEYL
        </h3>
        <p class="font-mono text-caption text-text-muted mb-6">
          The render layer for generative media
        </p>
        
        <!-- Social icons using shared component -->
        <SocialIcons size="md" />
      </div>
      
      {Object.entries(footerLinks).map(([category, links]) => (
        <div>
          <h4 class="font-mono text-small font-semibold text-text-primary uppercase tracking-wider mb-3">
            {category}
          </h4>
          <ul class="space-y-2">
            {links.map((link) => (
              <li>
                <a 
                  href={link.href}
                  class="font-mono text-caption text-text-secondary hover:text-brand-primary transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <div class="border-t border-border pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="font-mono text-caption text-text-muted">
        Â© {new Date().getFullYear()} Weyl AI Labs // All rights reserved
      </p>
      
    </div>
  </div>
</footer>

