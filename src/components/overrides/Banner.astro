---
// src/components/overrides/Banner.astro
// Custom Banner component to show llms.txt links at the top of doc pages
import type { Props } from '@astrojs/starlight/props';

// Check if we're on a docs page (not blog or landing)
const isDocs = Astro.url.pathname.startsWith('/getting-started/') || 
               Astro.url.pathname.startsWith('/api/');

// Get the current page path for markdown link
const currentPath = Astro.url.pathname.replace(/\/$/, '');
const mdLink = currentPath ? `${currentPath}.md` : '';
---

{isDocs && (
  <div class="llms-banner">
    <div class="llms-banner-content">
      <span class="llms-banner-label">LLM-friendly formats:</span>
      <div class="llms-banner-links">
        {mdLink && (
          <>
            <a href={mdLink} class="llms-link">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
              </svg>
              <span>Markdown</span>
            </a>
            <span class="llms-separator">|</span>
          </>
        )}
        <a href="/llms.txt" class="llms-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
            <line x1="10" y1="9" x2="8" y2="9"></line>
          </svg>
          <span>llms.txt</span>
        </a>
        <span class="llms-separator">|</span>
        <a href="/llms-full.txt" class="llms-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
            <polyline points="10 9 9 9 8 9"></polyline>
          </svg>
          <span>llms-full.txt</span>
        </a>
      </div>
    </div>
  </div>
)}

<style>
  .llms-banner {
    padding: 0.875rem var(--sl-content-pad-x);
    background: var(--sl-color-bg-sidebar);
    border-bottom: 1px solid var(--sl-color-hairline-light);
    margin-bottom: 1.5rem;
    width: 100%;
  }

  .llms-banner-content {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    font-family: var(--sl-font-mono);
    font-size: var(--sl-text-sm);
    line-height: 1.6;
  }

  .llms-banner-label {
    color: var(--sl-color-gray-3);
    font-weight: 500;
    white-space: nowrap;
  }

  .llms-banner-links {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    flex-wrap: wrap;
  }

  .llms-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    color: var(--sl-color-gray-2);
    text-decoration: none;
    padding: 0.25rem 0.5rem;
    border-radius: var(--sl-border-radius);
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .llms-link:hover {
    color: var(--sl-color-white);
    background: var(--sl-color-gray-6);
  }

  .llms-link svg {
    opacity: 0.7;
    flex-shrink: 0;
  }

  .llms-link:hover svg {
    opacity: 1;
  }

  .llms-separator {
    color: var(--sl-color-gray-4);
    user-select: none;
    padding: 0 0.125rem;
  }

  @media (min-width: 50rem) {
    .llms-banner {
      padding: 0.875rem var(--sl-content-pad-x);
    }
    
    .llms-banner-content {
      gap: 1.25rem;
    }
    
    .llms-banner-links {
      gap: 0.75rem;
    }
  }

  @media (max-width: 50rem) {
    .llms-banner-content {
      font-size: 0.8125rem;
    }
    
    .llms-link {
      padding: 0.1875rem 0.375rem;
    }
  }
</style>

