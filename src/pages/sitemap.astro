---
// src/pages/sitemap.astro
// Human-readable HTML sitemap

import { getCollection } from 'astro:content';

const docs = await getCollection('docs');
const blog = await getCollection('blog');

// Group docs by category
const docsByCategory = docs.reduce((acc: any, doc: any) => {
  const category = doc.slug.split('/')[0] || 'general';
  if (!acc[category]) acc[category] = [];
  acc[category].push(doc);
  return acc;
}, {});

const pageTitle = 'Sitemap';
const pageDescription = 'Complete site navigation for Weyl documentation and blog';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{pageTitle} | Weyl</title>
  <meta name="description" content={pageDescription} />
  <link rel="canonical" href="https://weyl.ai/sitemap" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: system-ui, -apple-system, sans-serif;
      line-height: 1.6;
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
      background: #f4f1eb;
      color: #090b0e;
    }
    
    @media (prefers-color-scheme: dark) {
      body {
        background: #090b0e;
        color: #f4f1eb;
      }
      
      a {
        color: #88c0d0;
      }
      
      a:hover {
        color: #8fbcbb;
      }
    }
    
    h1 {
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
    }
    
    .subtitle {
      font-size: 1.125rem;
      opacity: 0.8;
      margin-bottom: 3rem;
    }
    
    .section {
      margin-bottom: 3rem;
    }
    
    h2 {
      font-size: 1.75rem;
      margin-bottom: 1rem;
      border-bottom: 2px solid currentColor;
      padding-bottom: 0.5rem;
    }
    
    ul {
      list-style: none;
      padding-left: 0;
    }
    
    li {
      margin-bottom: 0.75rem;
    }
    
    a {
      color: #5e81ac;
      text-decoration: none;
      transition: color 0.2s;
    }
    
    a:hover {
      color: #81a1c1;
      text-decoration: underline;
    }
    
    .meta {
      font-size: 0.875rem;
      opacity: 0.7;
      margin-left: 0.5rem;
    }
    
    .back-link {
      display: inline-block;
      margin-top: 3rem;
      padding: 0.75rem 1.5rem;
      background: #5e81ac;
      color: white;
      border-radius: 4px;
      font-weight: 600;
    }
    
    .back-link:hover {
      background: #81a1c1;
      text-decoration: none;
    }
  </style>
</head>
<body>
  <header>
    <h1>{pageTitle}</h1>
    <p class="subtitle">{pageDescription}</p>
  </header>
  
  <main>
    <section class="section">
      <h2>Main Pages</h2>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/blog/">Blog</a></li>
        <li><a href="/getting-started/">Getting Started</a></li>
        <li><a href="/api/">API Documentation</a></li>
      </ul>
    </section>
    
    {Object.entries(docsByCategory).map(([category, categoryDocs]) => {
      const docs = categoryDocs as any;
      const categoryTitle = category.charAt(0).toUpperCase() + category.slice(1).replace(/-/g, ' ');
      
      return (
        <section class="section">
          <h2>{categoryTitle}</h2>
          <ul>
            {docs.map((doc: any) => (
              <li>
                <a href={`/${doc.slug}/`}>{doc.data.title}</a>
                {doc.data.description && (
                  <span class="meta">- {doc.data.description}</span>
                )}
              </li>
            ))}
          </ul>
        </section>
      );
    })}
    
    <section class="section">
      <h2>Blog Posts</h2>
      <ul>
        {blog
          .sort((a: any, b: any) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
          .map((post: any) => (
            <li>
              <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
              <span class="meta">- {post.data.pubDate.toLocaleDateString()}</span>
            </li>
          ))}
      </ul>
    </section>
  </main>
  
  <footer>
    <a href="/" class="back-link">‚Üê Back to Home</a>
  </footer>
</body>
</html>

