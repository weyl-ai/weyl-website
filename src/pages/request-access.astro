---
// src/pages/request-access.astro
import Landing from '@/layouts/Landing.astro';
import RequestAccessForm from '@components/forms/RequestAccessForm';
---

<Landing
  title="Request API Access - Weyl"
  description="Request access to the Weyl API for your generative media project. Get started with sub-100ms latency inference infrastructure."
  hideCalendly={true}
>
  <main class="min-h-screen bg-bg-primary">
    {/* Hero Section */}
    <section class="pt-24 pb-12 px-6">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="font-display text-hero font-semibold tracking-wider text-brand-primary mb-6 drop-shadow-glow">
          REQUEST API ACCESS
        </h1>
        
        <p class="font-mono text-body text-text-muted max-w-2xl mx-auto leading-relaxed mb-4">
          Request access below. We'll send you a <strong class="text-text-secondary">Slack Connect invitation</strong> to the email you provide to chat with our team and get your API key.
        </p>
      </div>
    </section>

    {/* Form Section */}
    <section class="pb-24 px-6">
      <div class="max-w-2xl mx-auto">
        <RequestAccessForm client:only="react" />
      </div>
    </section>

  </main>
</Landing>
