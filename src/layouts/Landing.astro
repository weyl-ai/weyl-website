---
// src/layouts/Landing.astro
import BaseHead from './BaseHead.astro';
import JsonLd from '@components/seo/JsonLd.astro';
import CalendlyBadge from '@components/ui/CalendlyBadge.astro';
import LandingNav from '@components/landing/LandingNav.astro';
import LandingFooter from '@components/landing/LandingFooter.astro';
import SpeedInsights from '@/components/analytics/SpeedInsights.astro';
import { organizationSchema, websiteSchema } from '@lib/seo/schema';

// Import global styles
import '@/styles/tokens.css';
import '@/styles/global.css';
import '@/styles/typography.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Weyl',
  description = 'The render layer for generative media. Inference infrastructure for diffusion models with sub-100ms latency.',
} = Astro.props;

// Default OG image for landing page
const ogImage = '/og-default.png';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={ogImage} />
    <JsonLd schema={organizationSchema} />
    <JsonLd schema={websiteSchema} />
  </head>
  <body>
    <LandingNav />
    <slot />
    <LandingFooter />
    <CalendlyBadge />
    <SpeedInsights />
  </body>
</html>

