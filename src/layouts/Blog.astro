---
// src/layouts/Blog.astro
import BaseHead from '@/layouts/BaseHead.astro';
import JsonLd from '@components/seo/JsonLd.astro';
import LandingNav from '@components/landing/LandingNav.astro';
import LandingFooter from '@components/landing/LandingFooter.astro';
import { techArticleSchema } from '@lib/seo/schema';

// Import global styles
import '@/styles/tokens.css';
import '@/styles/global.css';
import '@/styles/typography.css';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  author: string;
  tags?: string[];
  image?: { src: string; alt: string };
}

const { 
  title, 
  description, 
  pubDate, 
  updatedDate,
  author,
  tags = [],
  image 
} = Astro.props;

// Use TechArticle schema for technical blog posts
const schema = techArticleSchema({
  title,
  description,
  datePublished: pubDate.toISOString(),
  dateModified: updatedDate?.toISOString(),
  author,
  url: Astro.url.href,
  image: image?.src,
  keywords: tags,
});
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead 
      title={title}
      description={description}
      image={image?.src || '/og-blog.png'}
      type="article"
      publishedTime={pubDate.toISOString()}
      modifiedTime={updatedDate?.toISOString()}
    />
    <JsonLd schema={schema} />
  </head>
  <body class="bg-bg-primary min-h-screen">
    <LandingNav />
    <article class="max-w-3xl mx-auto px-6 py-24 pt-32">
      <header class="mb-12">
        <a 
          href="/blog" 
          class="font-mono text-small text-text-muted hover:text-brand-primary mb-6 inline-block transition-colors"
          aria-label="Back to blog"
        >
          ← Back to blog
        </a>
        
        <h1 class="font-display text-hero font-semibold tracking-wide text-text-primary mb-6">
          {title}
        </h1>
        
        <div class="flex gap-4 text-caption text-text-muted mb-4">
          <time datetime={pubDate.toISOString()}>
            {pubDate.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })}
          </time>
          <span aria-hidden="true">•</span>
          <span>{author}</span>
        </div>
        
        {tags.length > 0 && (
          <div class="flex gap-2 flex-wrap" role="list" aria-label="Tags">
            {tags.map((tag: string) => (
              <span class="px-2 py-1 bg-bg-surface border border-border text-text-muted text-caption rounded-sm" role="listitem">
                {tag}
              </span>
            ))}
          </div>
        )}
      </header>

      <div class="prose prose-invert max-w-none font-mono text-body text-text-secondary">
        <slot />
      </div>
    </article>
    <LandingFooter />
  </body>
</html>

<style is:global>
  .prose {
    color: var(--color-text-secondary);
  }
  
  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    color: var(--color-text-primary);
    font-family: var(--font-display);
    letter-spacing: 0.025em;
  }
  
  .prose h2 {
    font-size: var(--text-headline);
    margin-top: 3rem;
    margin-bottom: 1rem;
  }
  
  .prose h3 {
    font-size: var(--text-subhead);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }
  
  .prose p {
    margin-bottom: 1.5rem;
  }
  
  .prose a {
    color: var(--color-brand-primary);
    text-decoration: underline;
  }
  
  .prose a:hover {
    color: var(--color-brand-hover);
  }
  
  .prose code {
    background-color: var(--color-bg-surface);
    border: 1px solid var(--color-border-default);
    border-radius: var(--radius-sm);
    padding: 0.125rem 0.375rem;
    font-size: 0.875em;
  }
  
  .prose pre {
    background-color: var(--color-bg-surface);
    border: 1px solid var(--color-border-default);
    border-radius: var(--radius-md);
    padding: 1rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }
  
  .prose pre code {
    background: none;
    border: none;
    padding: 0;
  }
  
  .prose ul,
  .prose ol {
    margin-left: 1.5rem;
    margin-bottom: 1.5rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
  }
  
  .prose blockquote {
    border-left: 4px solid var(--color-brand-primary);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--color-text-muted);
    font-style: italic;
  }
  
  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }
  
  .prose th,
  .prose td {
    border: 1px solid var(--color-border-default);
    padding: 0.75rem;
    text-align: left;
  }
  
  .prose th {
    background-color: var(--color-bg-surface);
    font-weight: 600;
  }
  
  .prose hr {
    border: none;
    border-top: 1px solid var(--color-border-default);
    margin: 3rem 0;
  }
</style>

